<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.tcarrbraint.dmorgan.awiseman.interactiveandroidbeaconsystem.AdultModeActivity"
    android:background="#2467e2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:id="@+id/adult_image"
        android:layout_gravity="center_horizontal|top"
        android:padding="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/facts"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="50dp"
        android:paddingBottom="30dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/fact_text"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="2"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/next_fact_button"
            android:src="@drawable/forward_arrow"
            android:layout_weight="1"
            android:background="#2467e2"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/done"
            android:id="@+id/done_button"
            android:layout_gravity="bottom|right"
            android:background="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
